<?xml version="1.0" encoding="UTF-8" ?>
<Configuration>
	<Appenders>
		<!-- All -->
		<RollingFile name="RollingFile"
			fileName="${echoes.log.path}/EDM-Transformation-${date:yyyy-MM-dd}.log"
			filePattern="${echoes.log.path}/EDM-Transformation-%d{yyyy-MM-dd}-%i.log">
			<PatternLayout>
				<Pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n
				</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy />
			</Policies>
			<DefaultRolloverStrategy max="99" />
		</RollingFile>
		<!-- Console -->
		<Console name="Console">
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Logger name="org.EDM.Transformations.deserialize" level="debug"
			additivity="true">
			<appender-ref ref="RollingFile" level="info" />
		</Logger>

		<Logger name="org.EDM.Transformations.formats" level="debug"
			additivity="true">
			<appender-ref ref="RollingFile" level="info" />
		</Logger>

		<Logger name="org.EDM.Transformations.serialize" level="debug"
			additivity="true">
			<appender-ref ref="RollingFile" level="info" />
		</Logger>

		<Root level="info" additivity="true">
			<appender-ref ref="Console" />
		</Root>
	</Loggers>
</Configuration>
